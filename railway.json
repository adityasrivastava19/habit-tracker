{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "rm -rf client/dist && cd client && npm install && npm run build && cd ../server && npm install",
        "nixpacksOptions": {
            "cache": false
        }
    },
    "deploy": {
        "startCommand": "cd server && node server.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}