# Environment Variables Template
# Copy this to .env and fill in your actual values

# MongoDB Atlas Connection String
# Get this from: MongoDB Atlas → Database → Connect → Connect your application
# Format: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/habit-tracker?retryWrites=true&w=majority
MONGO_URI=your_mongodb_atlas_connection_string_here

# JWT Secret for token signing
# Generate a strong random string (e.g., use a password generator with 32+ characters)
JWT_SECRET=your_secure_random_jwt_secret_here

# Server Port (Render will set this automatically in production)
PORT=5000
